---
import { Image } from 'astro:assets';

export interface Props {
	heroImage?: ImageMetadata;
	heroText?: string;
	heroImageCredit?: string;
}

const { heroImage, heroText, heroImageCredit } = Astro.props;
---

{heroImage && (
	<div class="image-container">
		<Image src={heroImage} alt="" />
		{heroText && (
			<div class="overlay-text">
				<h4 class="title">{heroText}</h4>
			</div>
		)}
		{heroImageCredit && (
			<div class="image-credit">credit: {heroImageCredit}</div>
		)}
	</div>
)}

<style>
	.image-container {
		position: relative;
		overflow: hidden;
		border-radius: 12px;
		display: block;
		aspect-ratio: 4/3;
	}
	
	.image-container img {
		display: block;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
	
	.overlay-text {
		position: absolute;
		color: white;
		padding: 2rem;
		top: 50%;
		left: 0;
		right: 0;
		transform: translateY(-50%);
		text-align: center;
	}
	
	.overlay-text .title {
		color: white;
		line-height: 1.2;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
	}
	
	.image-credit {
		position: absolute;
		right: 0.75rem;
		top: 50%;
		transform: translateY(-50%) rotate(90deg) translateX(50%);
		transform-origin: right center;
		color: rgba(255, 255, 255, 0.8);
		font-size: 0.75rem;
		font-weight: 300;
		text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
		white-space: nowrap;
		z-index: 10;
		max-height: 80%;
		overflow: hidden;
		text-overflow: ellipsis;
	}
	
	@media (max-width: 55em) {
		.image-credit {
			font-size: 0.7rem;
			right: 0.75rem;
			max-height: 75%;
		}
	}
	
	@media (max-width: 35em) {
		.image-credit {
			font-size: 0.65rem;
			right: 0.5rem;
			max-height: 70%;
		}
	}
</style> 