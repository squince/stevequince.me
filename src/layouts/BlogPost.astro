---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import HeroImage from '../components/HeroImage.astro';
import AllPostsLink from '../components/AllPostsLink.astro';

type Props = CollectionEntry<'musings'>['data'] & {
	prevPost?: { id: string; title: string } | null;
	nextPost?: { id: string; title: string } | null;
};

const { title, description, pubDate, updatedDate, heroImage, heroText, heroImageCredit, imageAltText, prevPost, nextPost } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
				padding: 1em;
			}

			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}

			.post-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin: 1em 0;
			}


			.post-date {
				color: rgb(var(--gray));
				font-size: 0.9em;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0;
			}
			.last-updated-on {
				font-style: italic;
				margin-top: 0.25em;
			}

			.post-navigation {
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin: 2em 0;
				padding: 1em 0;
				border-top: 1px solid rgba(var(--gray-light), 30%);
				border-bottom: 1px solid rgba(var(--gray-light), 30%);
			}

			.post-navigation .nav-prev {
				margin-right: auto;
			}

			.post-navigation .nav-next {
				margin-left: auto;
			}

			.post-navigation .nav-center {
				display: flex;
				justify-content: center;
				align-items: center;
			}

			.post-navigation a {
				color: rgb(var(--gray-dark));
				text-decoration: none;
				padding: 0.5em 1em;
				border-radius: 4px;
				transition: all 0.2s ease;
			}

			.post-navigation a:hover {
				background: rgba(var(--gray-light), 20%);
				color: rgb(var(--black));
			}

			.post-navigation .nav-text {
				font-size: 0.9em;
				font-weight: 500;
			}

			.post-navigation .nav-title {
				font-size: 0.8em;
				margin-top: 0.25em;
				opacity: 0.8;
			}

			.rss-subscribe {
				margin: 1em 0;
				padding: 0.5em;
				background: rgba(var(--gray-light), 20%);
				border-radius: 4px;
				text-align: center;
			}

			.rss-subscribe p {
				margin: 0;
				font-size: 0.9em;
			}

			.rss-subscribe a {
				color: rgb(var(--gray-dark));
				text-decoration: underline;
			}

			.rss-subscribe a:hover {
				color: rgb(var(--black));
			}

			.talkyard-comments {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 0.5em;
				color: rgb(var(--gray));
				font-size: 0.9em;
				opacity: 0.9;
			}

			/* Component-specific responsive adjustments */
			@media (max-width: 35em) {
				.prose {
					padding: 0.5em;
				}
				.hero-image {
					padding: 0.5em;
				}
				.post-navigation .nav-title {
					display: none;
				}
				.post-navigation {
					flex-direction: column;
					align-items: center;
					gap: 0.5em;
				}
				.post-navigation .nav-prev,
				.post-navigation .nav-next {
					margin: 0;
					width: 100%;
					text-align: center;
				}
				.post-navigation .nav-center {
					order: 0;
					width: 100%;
					justify-content: center;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					<HeroImage
						heroImage={heroImage}
						heroText={heroText}
						heroImageCredit={heroImageCredit}
						altText={imageAltText || description}
					/>
				</div>
				<div class="prose">
					<div class="post-header">
						<AllPostsLink />
						<div class="post-date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
					</div>
					<div class="title">
						<h1>{title}</h1>
					</div>
					<slot />

					{(prevPost || nextPost) && (
						<div class="post-navigation">
							{prevPost && (
								<a href={`/musings/${prevPost.id}/`} class="nav-prev">
									<div class="nav-text">← Previous</div>
									<div class="nav-title">{prevPost.title}</div>
								</a>
							)}

							<div class="nav-center">
								<AllPostsLink />
							</div>

							{nextPost && (
								<a href={`/musings/${nextPost.id}/`} class="nav-next">
									<div class="nav-text">Next →</div>
									<div class="nav-title">{nextPost.title}</div>
								</a>
							)}
						</div>
					)}

					<hr />
					<div class="rss-subscribe">
						<p>Enjoyed this post? <a href="/rss.xml">Subscribe to my RSS feed</a> to get notified of new posts.</p>
					</div>
				</div>
			</article>
		</main>
		<script is:inline>talkyardServerUrl='https://site-qeybkd821q.talkyard.net';</script>
		<script is:inline defer src="https://c1.ty-cdn.net/-/talkyard-comments.min.js"></script>
		<!-- You can specify a per page discussion id on the next line, if your URLs might change. -->
		<div class="talkyard-comments" data-discussion-id={title}>
			<noscript>Please enable Javascript to view comments.</noscript>
		</div>
		<Footer />
	</body>
</html>
